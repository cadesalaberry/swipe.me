{
  "name": "swipeme.io",
  "version": "0.1.0",
  "main": "packages/api/src/index.ts",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api": "NODE_ENV=development sls offline start",
    "api:deploy": "sls deploy --stage=debug",
    "api:lint": "eslint packages/api/**/*.{js,ts}",
    "api:seed:remote": "sls dynamodb seed --online --region eu-west-1",
    "client": "yarn workspace @swipeme.io/client serve",
    "client:build": "yarn workspace @swipeme.io/client build",
    "client:deploy": "yarn workspace @swipeme.io/client deploy",
    "client:lint": "yarn workspace @swipeme.io/client lint",
    "postinstall": "patch-package",
    "serve": "concurrently --kill-others-on-fail \"yarn api\"  \"yarn client\""
  },
  "dependencies": {
    "@swipeme.io/client": "*",
    "@swipeme.io/common": "*",
    "aws-sdk": "^2.737.0",
    "aws-serverless-express": "^3.3.8",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "serverless-http": "^2.5.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.61",
    "@types/aws-serverless-express": "3.3.3",
    "@types/cors": "2.8.7",
    "@types/express": "4.17.7",
    "@types/node": "12.12.39",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "concurrently": "^5.3.0",
    "current-git-branch": "1.1.0",
    "eslint": "7.7.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "fork-ts-checker-webpack-plugin": "5.1.0",
    "lint-staged": "10.2.11",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "serverless": "1.79.0",
    "serverless-domain-manager": "4.2.0",
    "serverless-dynamodb-local": "0.2.39",
    "serverless-finch": "^2.6.0",
    "serverless-offline": "6.5.0",
    "serverless-webpack": "5.3.3",
    "ts-loader": "8.0.2",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-node-externals": "^2.5.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/typescript/recommended",
      "@vue/standard"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": 0
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged && ./packages/tools/branch-validator.js"
  },
  "lint-staged": {
    "packages/client/**/*.{js,ts,vue}": "yarn client:lint",
    "packages/api/**/*.{js,ts}": "yarn api:lint"
  },
  "homepage": "git@github.com:cadesalaberry/swipe.me"
}
